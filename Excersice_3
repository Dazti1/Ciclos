import os

os.system("cls")
k=0
while True:
    if(k==10):
        break
    print(k)
    k=k+2

print("\n---------menú--------")
opcion=""
while True:
    opcion=str(input("""
----menú----
1.- Opcion A
2.- Opcion B
3.- Salir

Elija opción:   """))
    if opcion=="1":
        print("A")
    elif opcion=="2":
        print("B")
    elif opcion=="3":
        break
    os.system("cls")
